

<div class="login">
  <h1 class="text-center"><%= @page_title = "Login" %></h>
  <%= form_tag(access_attempt_login_path, :method => :post, class: 'form-signin') do %>
    <%= label_tag(:username, nil, class: 'sr-only') %>
    <%= text_field_tag(:username, params[:username], class: "form-control", placeholder: "Username") %>
    <%= label_tag(:password, nil, class: 'sr-only') %>
    <%= password_field_tag(:password, nil, class: 'form-control', placeholder: 'Password' ) %>
    &nbsp;
    <%= submit_tag("Log In", class: 'btn btn-primary btn-block') %>
  <% end %>
</div>
